extends partial/layout

block site_title
    != page.title + " Â· " + config.title

block description
    - var desc = page.desc || page.title + ' - ' + config.author;
    meta(name="description", content=desc)

block container
    include mixins/post
    if page.layout === 'page'
        +singPage(page)
    else if page.layout === 'photo'
        +photo(page)
    else
        +post(page)

block pagination
    if page.layout === 'post'
        include mixins/paginator
        +post()
        if page.comments !== false
            include partial/comment

block copyright
    include partial/copyright
